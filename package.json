{
  "name": "deck",
  "version": "4.2.3",
  "description": "DECK is powerful and high performant local web development studio unlike any other",
  "main": "main.js",
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "dev": "rollup -c -w --bundleConfigAsCjs",
    "start": "sirv public --no-clear",
    "electron": "wait-on http://localhost:8080 && electron .",
    "electron-dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "preelectron-pack": "npm run build",
    "electron-pack": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "icon": "public/favicon.png",
    "productName": "DECK",
    "files": [
      "assets/**/*",
      "public/**/*",
      "resources/**/*",
      "main.js",
      "preload.js"
    ],
    "win": {},
    "linux": {},
    "mac": {}
  },
  "author": "DECK Contributors <hello@get-deck.com>",
  "license": "GNU Affero General Public License v3.0",
  "devDependencies": {
    "@electron/notarize": "^2.3.0",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "concurrently": "^7.5.0",
    "dotenv": "^10.0.0",
    "electron": "^21.2.0",
    "electron-builder": "^23.6.0",
    "prebuild-install": "^7.1.1",
    "rollup": "^3.15.0",
    "rollup-plugin-css-only": "^4.3.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.1.2",
    "sirv-cli": "^2.0.2",
    "svelte": "^3.55.0",
    "tailwindcss": "^2.2.19",
    "tinro": "^0.6.12",
    "wait-on": "^6.0.1"
  },
  "dependencies": {
    "@backrunner/redbird": "^0.15.0",
    "@electron/remote": "^2.1.2",
    "@lottiefiles/svelte-lottie-player": "^0.2.0",
    "@tailwindcss/forms": "^0.3.4",
    "detect-editors": "^4.0.0",
    "detect-shells": "^2.0.0",
    "dockerode": "^3.3.5",
    "download-git-repo": "^3.0.2",
    "electron-json-config": "^2.1.0",
    "electron-log": "^5.1.1",
    "electron-serve": "^1.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.6.5",
    "envfile": "^4.5.0",
