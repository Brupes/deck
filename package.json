    "lowdb": "^1.0.0",
    "markdown-it": "^12.3.2",
    "node-powershell": "^5.0.1",
    "node-pty": "^0.10.1",
    "redbird": "^0.10.0",
    "registry-js": "^1.15.1",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
